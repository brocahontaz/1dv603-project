<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="650.0" maxWidth="600.0" minHeight="600.0" minWidth="600.0" prefHeight="650.0" prefWidth="600.0" stylesheets="@bootstrap3.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReservationInfoPopupController">
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="reservationID" promptText="Reservation ID" />
            <TextField fx:id="arrivalDate" editable="false" promptText="Arrival date" styleClass="first" />
            <TextField fx:id="departureDate" editable="false" promptText="Departure date" styleClass="last" />
            <TextField fx:id="hotel" editable="false" promptText="Hotel" styleClass="first" />
            <TextField fx:id="quality" editable="false" promptText="Quality" styleClass="middle" />
            <TextField fx:id="room" editable="false" promptText="Room" styleClass="last" />
            <TextField fx:id="firstname" editable="false" promptText="Firstname" styleClass="first" />
            <TextField fx:id="lastname" editable="false" promptText="Lastname" styleClass="last" />
            <TextField fx:id="passport" editable="false" promptText="Passport number" />
            <TextField fx:id="address" editable="false" promptText="Address" />
            <TextField fx:id="telephone" editable="false" promptText="Telephone number" />
            <TextField fx:id="creditcard" editable="false" promptText="Credit card" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Price">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Text>
            <Text fx:id="price" strokeType="OUTSIDE" strokeWidth="0.0" text="0">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="SEK" />
            <CheckBox fx:id="checkedIN" disable="true" mnemonicParsing="false" text="Checked In" />
            <CheckBox fx:id="checkedOUT" disable="true" mnemonicParsing="false" text="Checked Out" />
            <ButtonBar prefWidth="200.0">
              <buttons>
                <Button fx:id="cancelReservationButton" mnemonicParsing="false" onMouseClicked="#cancelReservation" styleClass="danger" text="Cancel Reservation">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
              </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </center>
</BorderPane>
